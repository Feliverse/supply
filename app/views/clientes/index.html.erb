<p class="notice"><%= notice %></p>

<div class="actions d-flex justify-content-between align-items-center mb-3">
  <h1>Clientes</h1>
  <%= link_to new_cliente_path, class: "btn btn-success" do %>
    <i class="fas fa-plus"></i> Nuevo
  <% end %>
</div>

<div id="clientes" class="clientes-list border p-3">
  <% @clientes.each do |cliente| %>
    <div class="cliente-item mb-2 p-2 border-bottom">
      <%= render cliente %>
    </div>
  <% end %>
</div>


