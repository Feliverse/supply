<div class="container-fluid">
  <div class="row">
    <%= render 'nav' %>
    <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
      <h1>Almacen</h1>
      <p class="text-success"><%= notice %></p>
      <h2><%= @almacen.name %></h2>
      <h3>Inventario del Almacén</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Producto/Articulo</th>
            <th>Cantidad disponible</th>
            <th>Fecha actualizacion</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @almacen.inventarios.each do |inventario| %>
            <%= render inventario %>
          <% end %>
        </tbody>
      </table>

      <div class="mt-3">
        <%= link_to "Atras", :back, class: "btn btn-secondary" %> |
        <%= link_to "Ingresar productos", new_movimiento_producto_almacen_path(@almacen), class: "btn btn-primary" %> |
        <%= link_to "Ingresar artículos", new_movimiento_articulo_almacen_path(@almacen), class: "btn btn-primary" %>
      </div>
    </main>
  </div>
</div>
