<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center bg-secondary text-white py-3 px-5 mb-5">
  <div class="mb-2 ">
<h1>Subcategorías de <%= @category.name %></h1>
<p>Administra las subcategorías de <%= @category.name %></p>
</div>
<%= link_to new_category_subcategory_path(@category), class: "btn btn-primary mt-3" do %>
  <i class="fas fa-plus"></i> Nueva Subcategoría
<% end %>
</div>

<div id="subcategories" class="row">
  <% @subcategories.each do |subcategory| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex justify-content-between ">
          <h5 class="card-title"><%= subcategory.name %></h5>
          <div class="mt-auto d-flex justify-content-end">
            <%= link_to category_subcategory_path(@category, subcategory), class: "btn btn-sm" do %>
              <i class="fas fa-ellipsis-h"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to categories_path, class: "btn btn-secondary mt-3" do %>
  <i class="fas fa-arrow-left"></i> Vuelve a Categorías
<% end %>

