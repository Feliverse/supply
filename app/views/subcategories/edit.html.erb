<div class="container " style="max-width: 400px; text-align: left;">
<h1 class="mb-4">Editar Subcategoría</h1>
<p> 
  <strong>Categoría:</strong> <%= @category.name %><br>
  <strong>Subcategoría:</strong> <%= @subcategory.name %>

<div class="mb-3">
  <%= link_to "Volver", category_subcategory_path(@category, @subcategory), class: "btn btn-secondary" %>
  <%= link_to "Mostrar subcategorías", category_subcategories_path(@category), class: "btn btn-secondary" %>
</div>

<%= form_with(model: [@category, @subcategory], local: true) do |form| %>
  <% if @subcategory.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="alert-heading"><%= pluralize(@subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h2>
      <ul>
        <% @subcategory.errors.full_messages.each do |message| %>
          <li><%= message %></li><div class="container " style="max-width: 300px; text-align: left;">
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Nombre", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a valid name.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :marca_ids, "Marcas", class: "form-label" %>
    <div class="form-check">
      <%= form.collection_check_boxes :marca_ids, Marca.all, :id, :name do |b| %>
        <div class="form-check">
          <%= b.check_box(class: "form-check-input") %>
          <%= b.label(class: "form-check-label") %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-grid">
    <%= form.submit "Guardar Subcategoría", class: "btn btn-primary" %>
  </div>
<% end %>
</div>