<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category_id %>
  </p>

  <p>
    <strong>Subcategory:</strong>
    <%= product.subcategory_id %>
  </p>

  <% if @product.tech.present? %>
  <p>
    <strong>Tech:</strong>
    <%= @product.tech.name %>
  </p>
  <p>
    <strong>Marca:</strong>
    <%= @product.tech.marca.name %>
  </p>
<% else %>
  <p>
    <strong>Marca:</strong>
    <%= @product.marca.name %>
  </p>
<% end %>

</div>
