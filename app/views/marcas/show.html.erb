<p style="color: green"><%= notice %></p>

<div class="card mt-4 col-md-6 mx-auto">
  <div class="card-header text-center">
    <h1><%= @marca.name %></h1>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4 text-center">
        <img src="<%= @marca.logo %>" alt="<%= @marca.name %> logo" class="img-fluid rounded" style="max-height: 200px;">
      </div>
      <div class="col-md-8">
        <p>
          <strong>Contacto:</strong>
          <%= @marca.contact_name %>
        </p>
        <p>
          <strong>Numero:</strong>
          <%= @marca.contact_number %>
        </p>
      </div>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between">
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= link_to marcas_path, class: "btn btn-secondary" do %>
      <i class="fas fa-arrow-left"></i> Vuelve a marcas
    <% end %>
    <%= link_to edit_marca_path(@marca), class: "btn btn-primary me-2" do %>
      <i class="fas fa-edit"></i> Editar
    <% end %>
    <%= link_to marca_teches_path(@marca), class: "btn btn-info" do %>
      <i class="fas fa-list"></i> Ver Formatos
    <% end %>
  </div>
  <%= button_to marca_path(@marca), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } do %>
    <i class="fas fa-trash-alt"></i> Eliminar
  <% end %>
</div>
</div>
