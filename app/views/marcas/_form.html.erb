<%= form_with(model: @marca, local: true) do |form| %>
  <% if @marca.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@marca.errors.count, "error") %> prohibited this marca from being saved:</h2>

      <ul>
        <% @marca.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Nombre", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Por favor, ingrese el nombre.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :logo, class: "form-label" %>
    <%= form.text_field :logo, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :contact_name, "Contacto", class: "form-label" %>
    <%= form.text_field :contact_name, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Por favor, ingrese el nombre del contacto.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :contact_number, "Número de contacto", class: "form-label" %>
    <%= form.text_field :contact_number, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Por favor, ingrese el número de contacto.
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Guardar Marca", class: "btn btn-primary" %>
  </div>
<% end %>