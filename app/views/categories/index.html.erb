<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center bg-secondary text-white p-3 mb-3">
  <div>
    <h1 class="mb-0">Categorias</h1>
    <p>Administra tus categorias</p>
  </div>
  <%= link_to "+ Nueva Categoria", new_category_path, class: "btn btn-primary" %>
</div>

<div id="categories" class="row container align-items-center">
  <% @categories.each_with_index do |category, index| %>
    <div class="col-md-3 mb-4">
      <div class="card h-100" style="background-color: <%= ["#f8d7da", "#d4edda", "#d1ecf1", "#fff3cd", "#cce5ff", "#e2e3e5", ][index % 6] %>;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= category.name %></h5>
          <p class="card-text mt-auto">
            <%= link_to "ver", category_subcategories_path(category), class: "btn btn-sm btn-primary" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
