<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center bg-secondary text-white py-3 px-5 mb-5">
  <div class="mb-2 ">
    <h1 class="mb-0">Categorias</h1>
    <p>Administra tus categorias</p>
  </div>
  <%= link_to "+ Nueva", new_category_path, class: "btn btn-primary p-3" %>
</div>

<div class="container">
  <div id="categories" class="row row-cols-1 row-cols-md-4 g-4">
    <% @categories.each_with_index do |category, index| %>
      <div class="col-md-3 mb-4">
        <div class="card shadow h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= category.name %></h5>
            <div class="d-flex flex-wrap mb-3">
              <% category.subcategories.each do |subcategory| %>
                <%= link_to category_subcategory_marcas_path(category, subcategory), class: "badge bg-light text-dark border m-1" do %>
                  <%= subcategory.name %>
                <% end %>
              <% end %>
            </div>
            <div class="mt-auto d-flex justify-content-between">
              <%= link_to category_subcategories_path(category), class: "btn btn-sm btn-outline-primary me-2" do %>
                <i class="fas fa-eye"></i> Ver
              <% end %>
              <div>
                <%= link_to edit_category_path(category), class: "btn btn-sm" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= link_to category_path(category), method: :delete, data: { confirm: '¿Estás seguro de que deseas borrar esta categoría?' }, class: "btn btn-sm" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>