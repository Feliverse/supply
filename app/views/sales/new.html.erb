<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= render 'nav' %>
    </div>
    <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mt-md-5" style="background: rgba(255, 255, 255, 0.6); border-radius: 1rem;">
      <h1 class="text-center mt-md-2"><%= @almacen.name %></h1>
      <h2 class="">Registrar Venta</h2>
      <p class="">Por favor, llene el siguiente formulario para registrar una nueva venta.</p>
      <%= form_with model: @sale, local: true do |form| %>
        <%= render 'client', form: form %>
        <%= render 'form', form: form %>
      <% end %>
    </main>
  </div>
</div>


