<div class="d-flex justify-content-between align-items-center bg-secondary text-white py-3 px-5 mb-5">
  <div class="mb-2">
    <h1>Formatos</h1>
    <p>Administra las características técnicas </p>
  </div>
  <% if params[:category_id].present? && params[:subcategory_id].present? %>
    <%= link_to "New tech", new_category_subcategory_marca_tech_path(category_id: params[:category_id], subcategory_id: params[:subcategory_id], marca_id: params[:marca_id]), class: "btn btn-primary mt-3" %>
  <% else %>
    <%= link_to "New tech", "#", class: "btn btn-primary mt-3 disabled", title: "Category and Subcategory must be selected" %>
  <% end %>
</div>

<div id="teches" class="row">
  <% @teches.each do |tech| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= tech.format %></h5>
          <div class="mt-auto d-flex justify-content-end">
            <%= link_to category_subcategory_marca_tech_path(params[:category_id] || 'default_category', params[:subcategory_id] || 'default_subcategory', params[:marca_id], tech), class: "btn btn-sm btn-success" do %>
              <i class="fas fa-eye"></i> Ver
            <% end %>
            <%= link_to edit_category_subcategory_marca_tech_path(params[:category_id] || 'default_category', params[:subcategory_id] || 'default_subcategory', params[:marca_id], tech), class: "btn btn-sm btn-primary ms-2" do %>
              <i class="fas fa-edit"></i> Editar
            <% end %>
            <%= link_to category_subcategory_marca_tech_path(params[:category_id] || 'default_category', params[:subcategory_id] || 'default_subcategory', params[:marca_id], tech), method: :delete, data: { confirm: '¿Estás seguro de que deseas borrar esta característica técnica?' }, class: "btn btn-sm btn-danger ms-2" do %>
              <i class="fas fa-trash-alt"></i> Eliminar
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>