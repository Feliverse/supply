<div class="d-flex justify-content-between align-items-center bg-secondary text-white py-3 px-5 mb-5">
  <div class="mb-2">
    <h1>Formatos</h1>
    <p>Administra las características técnicas </p>
  </div>
   <%= link_to "+  Nuevo formato", new_marca_tech_path(marca_id: params[:marca_id]), class: "btn btn-primary mt-3" %>
   
</div>

<div id="teches" class="row">
  <% @teches.each do |tech| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= tech.name %></h5>
          <div class="mt-auto d-flex justify-content-end">
            <%= link_to marca_tech_path(@marca, tech), class: "btn btn-sm btn-success" do %>
              <i class="fas fa-eye"></i> Ver
            <% end %>
            <%= link_to marca_tech_path(@marca, tech), class: "btn btn-sm btn-primary ms-2" do %>
              <i class="fas fa-edit"></i> Editar
            <% end %>
            <%= link_to marca_tech_path(@marca, tech), method: :delete, data: { confirm: '¿Estás seguro de que deseas borrar esta característica técnica?' }, class: "btn btn-sm btn-danger ms-2" do %>
              <i class="fas fa-trash-alt"></i> Eliminar

            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "Volver a la marca", marca_path(@marca), class: "btn btn-secondary mt-3 ms-2" %>